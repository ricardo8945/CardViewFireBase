<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:elevation="90dp"
    android:layout_margin="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="12dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/post_image">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/post_fecha"
            android:text="17 de Mayo"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_marginBottom="5dp">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_descripcion"
            android:text="Evita el contacto directo con personas. Mantén como mínimo 1.5 metros de distancia promedio"
            android:textSize="16dp"
            android:textColor="#CABBBB">
        </TextView>
    </LinearLayout>


</androidx.cardview.widget.CardView>